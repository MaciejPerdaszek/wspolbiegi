        <Button Name="StartButton" Content="Start" Height="30" Width="100" Margin="0,0,90,281" RenderTransformOrigin="0.508,2.704" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
        <TextBox Height="30" Width="100" Margin="0,0,90,406" TextChanged="TextBox_TextChanged" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
    </Grid>
